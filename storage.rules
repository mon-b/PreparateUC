rules_version = '2';

// Reglas de Firebase Storage para Prep치rateUC
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura y escritura en la carpeta preparaciones
    match /preparaciones/{allPaths=**} {
      // TODO: En producci칩n, agregar autenticaci칩n
      // allow read, write: if request.auth != null;

      // Para desarrollo: permitir todo temporalmente
      allow read, write: if true;
    }

    // Bloquear todo lo dem치s por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
